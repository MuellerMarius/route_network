{
  "name": "route_network",
  "version": "1.0.0",
  "description": "Plots great circles between airports on a world map.",
  "author": "Marius Mueller",
  "license": "ISC",
  "scripts": {
    "start": "run-p start:**",
    "start:lambda": "netlify dev",
    "start:client": "cd client && npm run start",
    "build": "run-s build:**",
    "build:lambda": "netlify build",
    "build:client": "cd client && npm install & npm run build",
    "deploy:draft": "netlify deploy --dir=client/build --functions=functions",
    "deploy:prod": "netlify deploy --dir=client/build --functions=functions --prod"
  },
  "dependencies": {
    "csv-parser": "^2.3.2",
    "express": "^4.17.1",
    "serverless-http": "^2.3.2"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
